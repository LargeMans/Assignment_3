<%- include ../partials/header.ejs %>
<%- include ../partials/navbar.ejs %>

<!-- add page --> 
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">

              <div class="form-group">
                <label for="nameTextField"> Assignment Title</label>
                <input type="text" class="form-control"
                id="nameTextField"
                Placeholder="Enter the assignment title"
                name="name" required>
               </div>

                <div class="form-group">
                <label for="Due_dateTextField"> Assignment Due Date</label>
                <input type="text" class="form-control"
                id="Due_dateTextField"
                Placeholder="Enter the due date"
                name="Due_date" required>
                </div>

                <div class="form-group">
                <label for="descriptionTextField"> Assignment Description</label>
                <input type="text" class="form-control"
                id="descriptionTextField"
                Placeholder="Enter the assignment requirments"
                name="description" required>
                </div>

                <br>

                <button class="btn-btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit </button>

                <a href="/assignment-list" class="btn btn-danger">
                    <i class="fas fa-undo"></i> Cancel </a> 
            </form>
        </div>
    </div>
</div>

