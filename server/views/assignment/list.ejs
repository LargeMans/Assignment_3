<%- include ../partials/header.ejs %>
<%- include ../partials/navbar.ejs %>

 <!--content-->
<main>
<div class="container-centre mx-auto">
    <div class="row">
    <div class="col-md-offset-3 col-md-10 mx-auto">
    <br>
    <br>
    <table class = "table table-bordered table-striped table-hover">
    <tr class="table-dark d-flex">
    <th class="text-center col-3">Assignment</th>
    <th class="text-center col-2">Due date</th>
    <th class="text-center col-4">Description</th>
    <th class="text-center col-1">Edit</th>
    <th class="text-center col-1">Delete</th>
    </tr>
    <!-- loop --> 
    <% for(let count=0; count<Assignmentlist.length; count++){ %>
        <tr class="d-flex">
        <td class="text-center col-3"><%= Assignmentlist[count].name %></td>
        <td class="text-center col-2"><%= Assignmentlist[count].Due_date %></td>
        <td class="text-center col-4"><%= Assignmentlist[count].description %></td>
        <td class="text-center col-1">
            <a href="/assignment-list/edit/<%= Assignmentlist[count]._id %>"   
                class="btn btn-primary">
                <i class="fas fa-pencil-alt"></i> Edit </a>
        </td>
        <td class="text-center col-1">
            <a href="/assignment-list/delete/<%= Assignmentlist[count]._id %>"   
                class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Delete </a>
        </td>
        </tr>
    <% } %>
    </table>
    </div>
    <br>
    <a href="assignment-list/add" class="btn btn-dark" role="button">
        <i class="fas fa-plus-circle"></i> Add an Assignment</a>
</div>
  
</main>
